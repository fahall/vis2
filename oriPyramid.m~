function [pyrVals ] = oriPyramid( image, pyramidSize )
%UNTITLED3 Summary of this function goes here
%   Detailed explanation goes here

[imh, imw] = size(image);
filter = ones(pyramidSize);
ori = compute_ori(image);

for y = 1:4:imh - 4
    for x = 1:4:imw - 4
        window = ori(y:y+4, x:x+4);
        hist = histcount(window, 9);
        
    end
end



%now we need to get the values from the right pixels. 
offset = ceil(pyramidSize/2);

sample = values(1:offset:end, 1:offset:end);
pyrVals = reshape(sample, 1, []);


end
